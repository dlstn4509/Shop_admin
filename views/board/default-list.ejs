<link rel="stylesheet" href="/css/<%= currents[1] %>-<%= boardType %>.css">
<article class="board-container default-type list-page">
  <div class="my-2">
    <div class="mb-2">총 게시글: <%= totalRecord %> 건</div>
    <div class="d-flex">
      <%- include('../inc/search.ejs') %>
      <%- include('../inc/sort.ejs') %>
      <a href="<%= goList %>&type=create" class="btn btn-primary ml-auto">게시글작성</a>
    </div>
  </div>
  <table class="table text-center border-bottom">
    <thead class="thead-dark">
      <tr>
        <th>번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>작성일</th>
        <th>조회수</th>
      </tr>
    </thead>
    <tbody>
      <% let i = 0; %>
      <% for(let v of lists) { %>
        <tr>
          <% if(sort === 'desc') { %>
            <td><%= totalRecord - (page - 1) * 5 - i++ %></td>
          <% } else { %>
            <td><%= page * 5 - 4 + i++ %></td>
          <% } %>
          <td class="text-left">
            <a href="<%= goPath %>/<%= v.id %>?<%= goQuery %>"><%= v.title %></a>
          </td>
          <td><%= v.writer %></td>
          <td><%= v.updatedAt %></td>
          <td><%= v.readCounter %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <div class="text-center my-4">
    <a href="<%= goList %>&type=create" class="btn btn-primary">글작성</a>
  </div>
  <%- include('../inc/pager.ejs', pager) %> 
</article>
<script>
  var page = '<%= page %>';
</script>
<script src="/js/<%=currents[1]%>/<%=boardType%>-list.js"></script>