<link rel="stylesheet" href="/css/<%= currents[1] %>-<%= boardType %>.css">
<article class="board-container gallery-type view-page">
  <div>gallery-view</div>
  <table class="table">
    <tbody>
      <tr>
        <td class="title" style="width: 160px;">번호</td>
        <td class="content"><%= list.id %></td>
      </tr>
      <tr>
        <td class="title" style="width: 160px;">제목</td>
        <td class="content"><%= list.title %></td>
      </tr>
      <tr>
        <td class="title">작성자</td>
        <td class="content"><%= list.writer %></td>
      </tr>
      <tr>
        <td class="title">작성일</td>
        <td class="content"><%= list.updatedAt %></td>
      </tr>
      <% for(let v of list.files) { %> 
        <% if(v.type === 'I') { %>
          <tr>
            <td colspan="2"></td>
            <div class="file-img my-2">
              <img src="<%= v.thumbSrc %>" class="mw-100">
            </div>
          </tr>
        <% } %>
      <% } %>
      <tr>
        <td colspan="2" class="td-content">
          <div><%= list.content %></div>
        </td>
      </tr>
    </tbody>
  </table>
  <%- include('./inc/view-bottom.ejs', { id: list.id }) %>
</article>
